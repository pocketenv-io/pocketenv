{
  "lexicon": 1,
  "id": "io.pocketenv.secret.defs",
  "defs": {
    "secretView": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier of the secret."
        },
        "name": {
          "type": "string",
          "description": "Name of the secret, e.g. 'DATABASE_URL', 'SSH_KEY', etc."
        }
      }
    },
    "secret": {
      "type": "object",
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the secret, e.g. 'DATABASE_URL', 'SSH_KEY', etc."
        },
        "value": {
          "type": "string",
          "description": "Value of the secret. This will be encrypted at rest and redacted in any API responses."
        }
      }
    },
    "secrets": {
      "type": "array",
      "items": {
        "type": "ref",
        "description": "A secret to add to the sandbox",
        "ref": "io.pocketenv.secret.defs#secret"
      }
    }
  }
}
