{
  "lexicon": 1,
  "id": "io.pocketenv.sandbox.updateSandboxSettings",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Update sandbox settings",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the sandbox",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "description": "A description for the sandbox"
            },
            "topics": {
              "type": "array",
              "description": "A list of topics/tags to associate with the sandbox",
              "items": {
                "type": "string",
                "maxLength": 50
              }
            },
            "repo": {
              "type": "string",
              "description": "A git repository URL to clone into the sandbox, e.g. a GitHub/Tangled repo.",
              "format": "uri"
            },
            "vcpus": {
              "type": "integer",
              "description": "The number of virtual CPUs to allocate for the sandbox",
              "minimum": 1
            },
            "memory": {
              "type": "integer",
              "description": "The amount of memory (in GB) to allocate for the sandbox",
              "minimum": 1
            },
            "disk": {
              "type": "integer",
              "description": "The amount of disk space (in GB) to allocate for the sandbox",
              "minimum": 3
            },
            "readme": {
              "type": "string",
              "description": "A URI to a README for the sandbox.",
              "format": "uri"
            },
            "secrets": {
              "type": "ref",
              "description": "A list of secrets to add to the sandbox",
              "ref": "io.pocketenv.secret.defs#secrets"
            },
            "variables": {
              "type": "ref",
              "description": "A list of environment variables to add to the sandbox",
              "ref": "io.pocketenv.variable.defs#variables"
            },
            "files": {
              "type": "ref",
              "description": "A list of files to add to the sandbox",
              "ref": "io.pocketenv.file.defs#file"
            },
            "volumes": {
              "type": "ref",
              "description": "A list of volumes to add to the sandbox",
              "ref": "io.pocketenv.volume.defs#volumes"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "io.pocketenv.sandbox.defs#profileViewDetailed"
        }
      }
    }
  }
}
