amends "../../schema/lexicon.pkl"

lexicon = 1
id = "io.pocketenv.sandbox.getSandbox"
defs = new Mapping<String, Query> {
  ["main"] {
    type = "query"
    description = "Get a sandbox by uri"
    parameters {
      type = "params"
      required = List("uri")
      properties {
        ["uri"] = new StringType {
          type = "string"
          description = "The sandbox URI."
          format = "at-uri"
        }
      }
    }
    output {
      encoding = "application/json"
      schema = new Ref {
        type = "ref"
        ref = "io.pocketenv.sandbox.defs#sandboxViewBasic"
      }
    }
  }
}
