amends "../../schema/lexicon.pkl"

lexicon = 1
id = "io.pocketenv.actor.getActorSandboxes"
defs = new Mapping<String, Query> {
  ["main"] {
    type = "query"
    description = "Get all sandboxes for a given actor"
    parameters {
      type = "params"
      required = List("did")
      properties {
        ["did"] = new StringType {
          description = "The DID or handle of the actor"
          format = "at-identifier"
        }
        ["limit"] = new IntegerType {
          type = "integer"
          description = "The maximum number of sandboxes to return."
          minimum = 1
        }
        ["offset"] = new IntegerType {
          type = "integer"
          description = "The number of sandboxes to skip before starting to collect the result set."
          minimum = 0
        }
      }
    }
    output {
      encoding = "application/json"
      schema = new ObjectType {
        type = "object"
        properties {
          ["sandboxes"] = new Array {
            type = "array"
            items = new Ref {
              ref = "io.pocketenv.sandbox.defs#sandboxViewDetailed"
            }
          }
          ["total"] = new IntegerType {
            type = "integer"
            description = "The total number of sandboxes available."
            minimum = 0
          }
        }
      }
    }
  }
}
