amends "../../schema/lexicon.pkl"

lexicon = 1
id = "app.bsky.actor.profile"
defs = new Mapping<String, Record> {
  ["main"] {
    type = "record"
    description = "A declaration of a Bluesky account profile."
    key = "literal:self"
    `record` {
      type = "object"
      properties {
        ["displayName"] = new StringType {
          type = "string"
          maxGraphemes = 64
          maxLength = 640
        }
        ["description"] = new StringType {
          type = "string"
          description = "Free-form profile description text."
          maxGraphemes = 256
          maxLength = 2560
        }
        ["avatar"] = new Blob {
          type = "blob"
          description =
            "Small image to be displayed next to posts from account. AKA, 'profile picture'"
          accept = List("image/png", "image/jpeg")
          maxSize = 1000000
        }
        ["banner"] = new Blob {
          type = "blob"
          description = "Larger horizontal image to display behind profile view."
          accept = List("image/png", "image/jpeg")
          maxSize = 10000000
        }
        ["labels"] = new Union {
          type = "union"
          description =
            "Self-label values, specific to the Bluesky application, on the overall account."
          refs = List("com.atproto.label.defs#selfLabels")
        }
        ["joinedViaStarterPack"] = new Ref {
          type = "ref"
          ref = "com.atproto.repo.strongRef"
        }
        ["createdAt"] = new StringType {
          type = "string"
          format = "datetime"
        }
      }
    }
  }
}
