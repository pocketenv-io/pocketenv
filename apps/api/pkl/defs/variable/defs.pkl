amends "../../schema/lexicon.pkl"

lexicon = 1
id = "io.pocketenv.variable.defs"
defs = new Mapping<String, StringType | Array | ObjectType> {
  ["variableView"] = new ObjectType {
    type = "object"
    properties {
      ["id"] = new StringType {
        type = "string"
        description = "Unique identifier of the environment variable."
      }
      ["name"] = new StringType {
        type = "string"
        description = "Name of the environment variable, e.g. 'NODE_ENV', 'PORT', etc."
      }
      ["value"] = new StringType {
        type = "string"
        description =
          "Value of the environment variable. This will be visible in API responses and should not contain sensitive information."
      }
    }
  }
  ["variable"] = new ObjectType {
    type = "object"
    required = List("name", "value")
    properties {
      ["sandboxId"] = new StringType {
        type = "string"
        description =
          "The ID of the sandbox to which the environment variable belongs. This is used to associate the variable with a specific sandbox environment."
      }
      ["name"] = new StringType {
        type = "string"
        description = "Name of the environment variable, e.g. 'NODE_ENV', 'PORT', etc."
      }
      ["value"] = new StringType {
        type = "string"
        description =
          "Value of the environment variable. This will be visible in API responses and should not contain sensitive information."
      }
    }
  }
   ["variables"] = new Array {
    type = "array"
    items = new Ref {
      type = "ref"
      ref = "io.pocketenv.variable.defs#envVar"
      description = "An environment variable to add to the sandbox"
    }
  }
}