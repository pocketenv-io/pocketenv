amends "../../schema/lexicon.pkl"

lexicon = 1
id = "io.pocketenv.file.getFiles"
defs = new Mapping<String, Query> {
  ["main"] {
    type = "query"
    parameters {
      type = "params"
      properties {
        ["limit"] = new IntegerType {
          type = "integer"
          description = "The maximum number of files to return."
          minimum = 1
        }
        ["offset"] = new IntegerType {
          type = "integer"
          description = "The number of files to skip before starting to collect the result set."
          minimum = 0
        }
      }
    }
    output {
      encoding = "application/json"
      schema = new ObjectType {
        type = "object"
        properties {
          ["files"] = new Array {
            type = "array"
            items = new Ref {
              ref = "io.pocketenv.file.defs#fileView"
            }
          }
          ["total"] = new IntegerType {
            type = "integer"
            description = "The total number of files available."
            minimum = 0
          }
        }
      }
    }
  }
}