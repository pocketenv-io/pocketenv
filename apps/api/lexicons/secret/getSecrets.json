{
  "lexicon": 1,
  "id": "io.pocketenv.secret.getSecrets",
  "defs": {
    "main": {
      "type": "query",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "The maximum number of secrets to return.",
            "minimum": 1
          },
          "offset": {
            "type": "integer",
            "description": "The number of secrets to skip before starting to collect the result set.",
            "minimum": 0
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "secrets": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "io.pocketenv.secret.defs#secretView"
              }
            },
            "total": {
              "type": "integer",
              "description": "The total number of secrets available.",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}
