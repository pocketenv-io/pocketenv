amends "../../schema/lexicon.pkl"

lexicon = 1
id = "io.pocketenv.sandbox.getPreferences"
defs = new Mapping<String, Query> {
  ["main"] {
    type = "query"
    description = "Get sandbox preferences"
    parameters {
      type = "params"
      required = List("id")
      properties {
        ["id"] = new StringType {
          type = "string"
          description = "The sandbox ID or URI to retrieve"
        }
      }
    }
    output {
      encoding = "application/json"
      schema = new Ref {
        type = "ref"
        ref = "io.pocketenv.sandbox.defs#preferences"
      }
    }
  }
}
